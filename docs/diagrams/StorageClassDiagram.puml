@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor STORAGE_COLOR
skinparam classBackgroundColor STORAGE_COLOR

package Storage{

package "UserPrefs Storage" #F4F6F6{
Class "<<interface>>\nUserPrefsStorage" as UserPrefsStorage
Class JsonUserPrefsStorage
}

Class "<<interface>>\nStorage" as Storage
Class StorageManager

package "Tracker Storage" #F4F6F6{
Class "<<interface>>\nTrackerStorage" as TrackerStorage
Class JsonTrackerStorage
Class JsonSerializableTracker
Class JsonAdaptedModule
Class JsonAdaptedLecture
Class JsonAdaptedVideo
Class JsonAdaptedTag
}

}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Storage

StorageManager .up.|> Storage
StorageManager -up-> "1" UserPrefsStorage
StorageManager -up-> "1" TrackerStorage

Storage -left-|> UserPrefsStorage
Storage -right-|> TrackerStorage

JsonUserPrefsStorage .up.|> UserPrefsStorage
JsonTrackerStorage .up.|> TrackerStorage
JsonTrackerStorage ..> JsonSerializableTracker
JsonSerializableTracker --> "*" JsonAdaptedModule
JsonAdaptedModule --> "*" JsonAdaptedLecture
JsonAdaptedLecture --> "*" JsonAdaptedVideo

JsonAdaptedModule --> "*" JsonAdaptedTag
JsonAdaptedLecture --> "*" JsonAdaptedTag
JsonAdaptedVideo --> "*" JsonAdaptedTag

@enduml
