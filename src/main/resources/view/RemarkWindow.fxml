<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.control.TextArea?>
<fx:root resizable="true" title="Editing remarks" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
  <icons>
    <Image url="@/images/remarkWindowIcon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@RemarkWindow.css" />
      </stylesheets>
      <HBox alignment="CENTER" fx:id="helpMessageContainer" maxHeight="500" maxWidth="500" >
        <children>
          <TextArea fx:id="textArea" wrapText="true" HBox.hgrow="SOMETIMES"/>
        </children>
        <opaqueInsets>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </opaqueInsets>
        <padding>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </padding>
      </HBox>
    </Scene>
  </scene>
</fx:root>
