<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
         title="Dengue Hotspot Tracker" minWidth="800" minHeight="600" onCloseRequest="#handleExit">
  <icons>
    <Image url="@/images/dengue_tracker.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DengueTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox prefWidth="800" prefHeight="600">
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <StackPane VBox.vgrow="NEVER" fx:id="commandBoxPlaceholder" styleClass="pane-with-border">
          <padding>
            <Insets top="10" right="20" bottom="10" left="20" />
          </padding>
        </StackPane>

        <StackPane VBox.vgrow="NEVER" fx:id="resultDisplayPlaceholder" styleClass="pane-with-border"
                   minHeight="100" prefHeight="100" maxHeight="100">
          <padding>
            <Insets top="10" right="20" bottom="10" left="20" />
          </padding>
        </StackPane>

        <HBox prefWidth="800" prefHeight="600" VBox.vgrow="ALWAYS">
          <VBox fx:id="personList" styleClass="pane-with-border"
                     minWidth="450" prefWidth="450" HBox.hgrow="ALWAYS">
            <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
          </VBox>

          <StackPane fx:id="overviewDisplayPlaceholder" styleClass="pane-with-border"
                     minWidth="300" prefWidth="300" HBox.hgrow="ALWAYS" />
        </HBox>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
