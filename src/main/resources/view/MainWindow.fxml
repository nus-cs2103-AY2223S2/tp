<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>


<?import javafx.scene.image.Image?>
<fx:root type="javafx.stage.Stage" minHeight="600.0" minWidth="800.0" onCloseRequest="#handleExit"
         title="Paidlancers" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <icons>
       <Image url="@/images/paidlancers.png" />
   </icons>
   <scene>
      <Scene>
          <stylesheets>
              <URL value="@DarkTheme.css" />
              <URL value="@Extensions.css" />
          </stylesheets>

            <VBox style="-fx-background-color: #666664" spacing="10">
                <MenuBar fx:id="menuBar" style="-fx-background-color: #999798;" VBox.vgrow="NEVER">
                    <Menu mnemonicParsing="false" text="File">
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
                      </Menu>
                      <Menu mnemonicParsing="false" text="Help">
                          <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
                      </Menu>
                  </MenuBar>

                  <VBox fx:id="eventList" prefHeight="372.0" spacing="10.0"
                        style="-fx-background-color: #666664; -fx-background-radius: 20; -fx-border-radius: 18;
                         -fx-border-width: 3; -fx-border-color: #fdf599;"
                        styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                      <StackPane fx:id="eventListPanelPlaceholder" VBox.vgrow="ALWAYS" />
                  </VBox>

                  <Separator prefHeight="10.0" prefWidth="800.0" />

                  <StackPane fx:id="resultDisplayPlaceholder" maxHeight="140.0" minHeight="140.0" prefHeight="140.0"
                             style="-fx-background-radius: 20; -fx-border-radius: 18;
                         -fx-border-width: 3; -fx-border-color: salmon;" styleClass="pane-with-border">
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </StackPane>

                  <StackPane fx:id="commandBoxPlaceholder" VBox.vgrow="NEVER" styleClass="pane-with-border"
                             style="-fx-background-color: #666664; -fx-background-radius: 20; -fx-border-radius: 18;
                         -fx-border-width: 3; -fx-border-color: lightblue;" >
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </StackPane>

                  <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
            </VBox>
      </Scene>
   </scene>
</fx:root>
