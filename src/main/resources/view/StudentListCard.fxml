<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" prefHeight="42.0" prefWidth="360.0" style="-fx-background-radius: 15; -fx-background-color: white;" stylesheets="@StudentListCard.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane prefHeight="22.0" prefWidth="267.0" HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
      <HBox>
         <children>
         <HBox alignment="CENTER" spacing="5">
           <Label fx:id="id" styleClass="cell_big_label">
             <minWidth>
               <!-- Ensures that the label text is never truncated -->
               <Region fx:constant="USE_PREF_SIZE" />
             </minWidth>
                  <padding>
                     <Insets top="3.0" />
                  </padding>
           </Label>
           <Label fx:id="name" styleClass="cell_big_label" text="\$first">
                  <padding>
                     <Insets top="3.0" />
                  </padding>
               </Label>
         </HBox>
         </children>
      </HBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
   <VBox style="-fx-background-color: #b56d5e; -fx-background-radius: 5;">
      <children>
      <Label fx:id="studentId" style="-fx-background-radius: 3;" styleClass="cell_small_label" text="\$studentId" textFill="WHITE" />
      </children>
      <padding>
         <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
      </padding>
   </VBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
