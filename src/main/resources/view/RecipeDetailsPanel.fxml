<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<ScrollPane
         xmlns:fx="http://javafx.com/fxml/1"
         id="recipeDetailsContainer" fx:id="recipeDetailsContainer"
         AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0"
         AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" prefHeight="460" prefWidth="400"
        >
    <VBox alignment="CENTER" prefWidth="400">
        <Label fx:id="recipeTitle" text="\$recipeTitle" wrapText="true" styleClass="details_title_label"
        />
        <padding>
            <Insets top="10"/>
        </padding>
        <Label fx:id="recipeDesc" text="\$recipeDesc" wrapText="true" styleClass="details_desc_label" />
        <VBox alignment="CENTER_LEFT" prefWidth="400">
            <Label fx:id="ingredientsTitle" text="\$ingredientsTitle"
                   styleClass="details_steps_title"/>
            <VBox fx:id="ingredients" styleClass="details_label" />
            <Label fx:id="stepsTitle" text="\$stepsTitle" wrapText="true" styleClass="details_steps_title" />
            <VBox fx:id="steps" styleClass="details_label"/>
        </VBox>
    </VBox>
</ScrollPane>

