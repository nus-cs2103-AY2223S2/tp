<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="tempContainer" alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="firstLabel" text="Type in your new password below:" textAlignment="CENTER" wrapText="true">
      <font>
         <Font name="Arial" size="18.0" />
      </font>
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin></Label>
    <PasswordField fx:id="firstInputField" alignment="CENTER" maxHeight="50.0" maxWidth="650.0" prefHeight="40.0" onKeyPressed="#handleSubmit">
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
      <font>
         <Font name="Arial" size="18.0" />
      </font></PasswordField>
    <Label fx:id="secondLabel" alignment="center" text="Re-enter your password below:">
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
      <font>
         <Font name="Arial" size="18.0" />
      </font></Label>
    <PasswordField fx:id="secondInputField" alignment="CENTER" maxHeight="50.0" maxWidth="650.0" onKeyPressed="#handleSubmit" prefHeight="40.0">
      <font>
         <Font name="Arial" size="18.0" />
      </font>
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin></PasswordField>
   <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Submit" textAlignment="CENTER" wrapText="true" onAction="#handleButtonSubmit">
      <font>
         <Font name="Arial" size="18.0" />
      </font>
   </Button>
    <Label fx:id="errorMessageLabel" alignment="CENTER" maxHeight="50.0" maxWidth="650.0" prefHeight="40.0" textAlignment="CENTER" textFill="RED" wrapText="true">
      <font>
         <Font name="Arial" size="15.0" />
      </font></Label>
</VBox>
