<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>
      <HBox alignment="BOTTOM_RIGHT" fx:id="commandListContainer">
        <VBox>
          <Label fx:id="undoMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="redoMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="addMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="editMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="deleteMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="listMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="viewMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="findMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="backupMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="loadBackupMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="viewBackupMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="deleteBackupMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="clearMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="lightModeMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="darkModeMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="noteMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
          <Label fx:id="helpMessage" text="Label">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </Label>
        </VBox>
        <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
          <HBox.margin>
            <Insets left="5.0" />
          </HBox.margin>
        </Button>
        <opaqueInsets>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </opaqueInsets>
        <padding>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </padding>
      </HBox>
    </Scene>
  </scene>
</fx:root>
