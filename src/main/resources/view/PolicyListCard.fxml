<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox id="cardPane" fx:id="cardPane" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <VBox HBox.hgrow="ALWAYS">
      <children>
           <VBox alignment="CENTER_LEFT" minHeight="105" spacing="4.0">
               <padding>
                   <Insets bottom="16.0" left="8.0" right="8.0" top="16.0" />
               </padding>
               <HBox alignment="CENTER_LEFT" spacing="5">
                   <Label fx:id="id" styleClass="cell_big_label" textFill="WHITE">
                       <minWidth>
                           <!-- Ensures that the label text is never truncated -->
                           <Region fx:constant="USE_PREF_SIZE" />
                       </minWidth>
                  <font>
                     <Font name="SansSerif Bold" size="13.0" />
                  </font>
                   </Label>
                   <Label fx:id="name" styleClass="cell_big_label" text="\$first" textFill="WHITE">
                  <font>
                     <Font name="SansSerif Bold" size="14.0" />
                  </font>
               </Label>
               </HBox>
            <StackPane VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="8.0">
               <children>
                     <Label fx:id="startdate" styleClass="cell_small_label" text="\$startdate" textFill="WHITE">
                     <font>
                        <Font name="SansSerif Regular" size="13.0" />
                     </font>
                  </Label>
                  <StackPane HBox.hgrow="ALWAYS" />
                     <Label fx:id="premium" styleClass="cell_small_label" text="\$premium" textFill="WHITE">
                     <font>
                        <Font name="SansSerif Regular" size="13.0" />
                     </font>
                  </Label>
                     <Label fx:id="frequency" styleClass="label-tag" text="\$frequency" textFill="WHITE">
                     <font>
                        <Font name="SansSerif Regular" size="13.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <VBox.margin>
               <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </VBox.margin>
           </VBox>
         <StackPane maxHeight="1.0" minHeight="1.0" prefHeight="1.0" styleClass="divider">
            <VBox.margin>
               <Insets left="8.0" right="8.0" />
            </VBox.margin></StackPane>
      </children>
   </VBox>
</HBox>
